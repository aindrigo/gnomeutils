{
    "version": 2,
  
    "configurePresets": [
      {
        "name": "debug-base",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
        }
      },

      {
        "name": "release-base",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release"
        }
      },

      {
        "name": "windows-base",
        "binaryDir": "build",
        "generator": "MinGW Makefiles",
        "cacheVariables": {
          "CMAKE_CXX_COMPILER": "g++"
        }
      },

      {
        "name": "linux-base",
        "binaryDir": "build",
        "generator": "Make",
        "cacheVariables": {
          "CMAKE_CXX_COMPILER": "g++"
        }
      },

      {
        "name": "x64-debug-windows",
        "inherits": [ "windows-base", "debug-base" ]
      },

      {
        "name": "x64-debug-linux",
        "inherits": [ "linux-base", "debug-base" ]
      },

      {
        "name": "x64-release-windows",
        "inherits": [ "windows-base", "release-base" ]
      },

      {
        "name": "x64-release-linux",
        "inherits": [ "linux-base", "release-base"]
      }
    ]
  }